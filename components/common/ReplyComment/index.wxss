.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.modal-replay {
    background: hsla(0,0%,100%,0);
}

.comment-replay {
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    background: #f2f2f2;
    box-shadow: 0 -4rpx 8rpx 0 hsla(0,0%,87.1%,.5);
    padding-left: 30rpx;
}

.comment-replay .replay_input {
    width: 612rpx;
    height: 68rpx;
    background-color: #fff;
    padding: 0 20rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
    margin-right: 20rpx;
    box-sizing: border-box;
}

.comment-replay .form-placeholder {
    font-size: 28rpx;
    color: #c6c6c6;
}

.comment-replay .submit-btn {
    width: 68rpx;
    height: 68rpx;
}

.comment-replay .submit-btn .icon_send {
    width: 100%;
    height: 100%;
}