.building-card-list {
    display: flex;
    flex-wrap: wrap;
}

.building-card-item {
    margin-bottom: 30rpx;
    width: 216rpx;
    height: 260prx;
}

.mr10 {
    margin-right: 20rpx;
}

.form_submit {
    position: relative;
    display: block;
    width: 100%;
    height: 100%;
}

.btn_reset {
    padding: 0;
    border: 0;
    width: 100%;
    height: 100%;
    line-height: 1;
    border-radius: 0;
    background-color: #fff;
}

.building-card-cover {
    position: relative;
    width: 100%;
    height: 168rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.building-cover {
    width: 100%;
    height: 168rpx;
    background-color: #ccc;
}

.building-status {
    top: 10rpx;
    left: 10rpx;
    justify-content: center;
    padding: 0 10rpx;
    border-radius: 4rpx;
    height: 34rpx;
    background-color: #ff7300;
    background: linear-gradient(90deg,#ff9000,#ff7300);
    opacity: .92;
    line-height: 34rpx;
}

.building-status,.view-info {
    position: absolute;
    display: flex;
    align-items: center;
    font-size: 20rpx;
    color: #fff;
}

.view-info {
    left: 0;
    bottom: 0;
    width: 100%;
    height: 41rpx;
    background: linear-gradient(180deg,rgba(73,70,66,0),#35373d);
}

.icon_view {
    margin: 0 10rpx;
    width: 30rpx;
    height: 30rpx;
}

.view-num {
    display: flex;
    align-items: center;
    height: 30rpx;
}

.building-name {
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: 14rpx;
    margin-bottom: 8rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: left;
    color: #333;
}

.building-name__text {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.building-intro {
    display: flex;
    align-items: center;
    height: 30rpx;
    text-align: left;
}

.building-location {
    color: #999;
}

.building-location,.building-price {
    font-size: 22rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.building-price {
    margin-left: 10rpx;
    color: red;
    max-width: 130rpx;
    text-align: right;
}