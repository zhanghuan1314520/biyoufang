@charset "UTF-8";

.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.into-building {
    border-bottom: 14rpx solid #f7f7f7;
}

.scroll-wrap {
    white-space: nowrap;
    width: 100vw;
}

.scroll-wrap .building-item {
    font-size: 30rpx;
    color: #333;
    display: inline-block;
    padding: 0 30rpx;
    height: 96rpx;
    line-height: 96rpx;
}

.scroll-wrap .is-main {
    position: relative;
}

.scroll-wrap .is-main::before {
    font-size: 16rpx;
    color: #fff;
    position: absolute;
    top: 6rpx;
    right: -14rpx;
    content: "主推";
    height: 24rpx;
    line-height: 24rpx;
    padding: 0 8rpx;
    background: #ff8400;
    border-radius: 12rpx 12rpx 12rpx 0;
    text-align: center;
    font-weight: 700;
}

.scroll-wrap .active-tab {
    position: relative;
    font-weight: 500;
    font-size: 38rpx;
}

.scroll-wrap .line::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    background-color: #fe660b;
    border-radius: 4rpx;
    width: 50rpx;
    height: 8rpx;
}