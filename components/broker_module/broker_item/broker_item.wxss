.btn_reset {
    border: 0;
    line-height: 1;
    background-color: transparent;
}

.btn_getUserInfo,.btn_reset {
    padding: 0;
    width: 100%;
    height: 100%;
}

.btn_getUserInfo {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 2;
}

.broker-item {
    display: flex;
    padding: 20rpx 30rpx 20rpx 20rpx;
    border-radius: 8rpx 8rpx 0 0;
    background: linear-gradient(1turn,#edd59e,#e1c48d);
    background-size: contain;
}

.avatar,.avatar__inner {
    width: 108rpx;
    height: 108rpx;
    border-radius: 50%;
}

.broker-info {
    margin-left: 24rpx;
    flex: 1;
    max-width: 78%;
}

.broker,.broker-intro {
    display: flex;
}

.broker {
    flex-direction: column;
    overflow: hidden;
    max-width: 70%;
}

.broker-name {
    display: flex;
    align-items: center;
    height: 46rpx;
}

.broker-name__text {
    font-size: 32rpx;
    font-weight: 500;
    color: #90470d;
}

.icon_broker {
    margin-left: 8rpx;
    width: 30rpx;
    height: 30rpx;
}

.unfollow {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: auto;
    padding: 0 30rpx;
    height: 50rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
    font-weight: 500;
    color: #90470d;
    background: #faf2e2;
}

.follow {
    background-color: #d6b467;
    color: #fff;
}

.building-list {
    display: flex;
    flex-wrap: wrap;
    padding-top: 6rpx;
    overflow: hidden;
    position: relative;
}

.building-name {
    margin-right: 10rpx;
    text-align: center;
    width: 156rpx;
}

.building-name,.building-name__text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.building-name__text {
    display: inline-block;
    box-sizing: border-box;
    padding: 0 10rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 2rpx;
    font-size: 20rpx;
    color: #c38402;
    background-color: #faf2e2;
    width: 100%;
}

.intro-me {
    margin-top: 40rpx;
    color: #90470d;
    max-height: 80rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: justify;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.broker-contact {
    border-radius: 0 0 8rpx 8rpx;
    background: linear-gradient(1turn,#edd59e,#e1c48d);
}

.btn-list {
    padding: 14rpx 0;
}

.btn-item,.btn-list {
    display: flex;
}

.btn-item {
    position: relative;
    flex: 1;
    align-items: center;
}

.btn-item_vertical {
    flex-direction: column;
}

.btn-item_full {
    flex: 1;
}

.btn-item_horizontal {
    justify-content: center;
}

.icon_btn {
    width: 60rpx;
    height: 60rpx;
}

.btn-item__text {
    font-size: 26rpx;
    color: #a67b3e;
}

.btn-item_vertical .btn-item__text {
    margin-top: 10rpx;
}

.btn-item_horizontal .btn-item__text {
    margin-left: 18rpx;
}

.ellipse::after {
    content: "...";
    position: absolute;
    right: 0;
    bottom: 8rpx;
    color: #c38402;
}