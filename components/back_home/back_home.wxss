.btn-back-home {
    box-sizing: border-box;
    position: fixed;
    right: 0;
    width: 40px;
    height: 40px;
    padding: 6px 8px;
    font-size: 12px;
    line-height: 14px;
    color: #fff;
    background: rgba(254,94,16,.6);
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
    z-index: 5;
}

.fixed {
    top: 460rpx;
}

.absolute {
    position: absolute;
    bottom: 20rpx;
}