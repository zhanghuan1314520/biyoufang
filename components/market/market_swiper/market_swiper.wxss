.banner__wrap {
    position: relative;
}

.banner {
    height: 300rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.banner__item {
    position: relative;
    height: 100%;
}

.banner__title {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    background: linear-gradient(0deg,#252525,rgba(73,70,66,0));
}

.banner__title-text {
    font-size: 30rpx;
    font-weight: 700;
    font-family: PingFangSC-Semibold,PingFang SC;
    color: #fff;
    padding: 57rpx 0 20rpx;
    line-height: 42rpx;
}

.banner__image {
    width: 100%;
    height: 100%;
    background-color: #e6e6e6;
}