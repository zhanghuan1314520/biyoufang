.card {
    padding: 32rpx 30rpx;
    border-bottom: 14rpx solid #f7f7f7;
}

.card-title {
    font-size: 38rpx;
    font-weight: 600;
    color: #333;
    line-height: 53rpx;
    margin-bottom: 32rpx;
}

.card-item-box {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
}

.card-item {
    margin-right: 8rpx;
    border-radius: 5rpx;
    overflow: hidden;
}

.card-item-type2 {
    width: 340rpx;
    flex-shrink: 0;
}

.card-item-type2 .card-item-image-box {
    height: 255rpx;
}

.card-item:last-child {
    margin-right: 0;
}

.card-item-image-box {
    height: 168rpx;
    overflow: hidden;
}

.card-item-image {
    width: 224rpx;
    height: 168rpx;
    background-color: #ddd;
    vertical-align: middle;
}

.card-item-image-type2 {
    width: 340rpx;
    height: 349rpx;
}

.filter {
    width: 100%;
    height: 129rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    z-index: 2;
    filter: blur(7px) opacity(95%);
    background: linear-gradient(180deg,#35373d,rgba(73,70,66,0));
    opacity: .8;
}

.card-item-word-img {
    transform: rotate(180deg);
    opacity: .8;
}

.card-item-word {
    width: 224rpx;
    height: 130rpx;
    position: relative;
    color: #fff;
    padding: 11rpx 16rpx 17rpx;
    box-sizing: border-box;
    line-height: 37rpx;
    overflow: hidden;
}

.card-item-word-2 {
    width: 340rpx;
    height: 94rpx;
    line-height: 40rpx;
    flex-grow: 0;
}

.item-word {
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: 26rpx;
    font-weight: 500;
    position: absolute;
    z-index: 5;
    left: 16rpx;
    top: 11rpx;
    right: 16rpx;
    bottom: 17rpx;
}

.item-word-2 {
    -webkit-line-clamp: 2;
    line-height: 37rpx;
}

.card2-footer {
    margin: 30rpx 0 0 7rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
    align-items: center;
    border-bottom: 1px solid #ededed;
}

.card2-footer,.footer-left-box {
    display: flex;
    justify-content: space-between;
}

.footer-left-box {
    flex-direction: column;
    height: 164rpx;
}

.footer-title {
    width: 435rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    line-height: 45rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.footer-right-image {
    width: 218rpx;
    height: 164rpx;
    vertical-align: middle;
}

.mechanism-info-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.mechanism-name {
    font-size: 24rpx;
    color: #666;
    line-height: 33rpx;
    padding-left: 11rpx;
}

.mechanism-image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    vertical-align: middle;
}

.mechanism-time {
    color: #999;
}