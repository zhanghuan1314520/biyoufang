.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.category-card {
    border-bottom: 14rpx solid #f7f7f7;
}

.category-title {
    font-size: 38rpx;
    color: #333;
    padding: 39rpx 30rpx 0;
    font-weight: 500;
}

.card-list {
    width: 100vw;
    white-space: nowrap;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.card-list .card-item-wrap {
    display: inline-block;
    padding: 30rpx 0 40rpx;
    vertical-align: middle;
}

.card-list .card-item {
    width: 274rpx;
    background: #fff;
    box-shadow: 0 2rpx 28rpx 0 hsla(0,0%,77.3%,.5);
    margin-right: 20rpx;
    border-radius: 8rpx;
}

.card-list .card-item .cover {
    width: 100%;
    height: 206rpx;
}

.card-list .card-item .cover .cover-image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx 8rpx 0 0;
    background-color: #e6e6e6;
}

.card-list .card-item .news-name {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
    line-height: 37rpx;
    height: 94rpx;
    padding: 9rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
}

.card-list .card-item .news-name .title {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    white-space: normal;
}