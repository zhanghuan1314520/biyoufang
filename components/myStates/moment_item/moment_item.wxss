.moments-item {
    padding: 30rpx 0 11rpx 17rpx;
    display: flex;
}

.left-image-box {
    width: 106rpx;
    flex-shrink: 0;
}

.personer-image {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.sm {
    height: 60rpx;
    width: 60rpx;
    margin-right: 33rpx;
}

.right-box {
    flex: 1;
    margin-right: 30rpx;
    border-bottom: 1px solid #ededed;
}

.moment-title-line {
    display: flex;
}

.moment-name-box {
    flex: 1;
}

.operate-box {
    display: flex;
}

.moment-del-item {
    position: relative;
}

.auth {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
}

.moment-del {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin-top: 10rpx;
    margin-left: 20rpx;
    position: relative;
}

.del-btn {
    position: absolute;
    right: 0;
    top: 60rpx;
    z-index: 4;
}

.moment-name {
    font-size: 38rpx;
    font-weight: 500;
    color: #333;
    line-height: 53rpx;
    margin-bottom: 5rpx;
}

.moment-time {
    font-size: 24rpx;
    color: #999;
    line-height: 33rpx;
}

.moment-content {
    margin-top: 20rpx;
    margin-bottom: 14rpx;
    width: 577rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
}

.moment-image-box {
    padding-bottom: 10rpx;
}

.moment-border-none {
    border-bottom: 0;
}

.moment-content-image {
    width: 190rpx;
    height: 140rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    border-radius: 4rpx;
    vertical-align: middle;
}

.moment-content-image:nth-child(3n) {
    margin-right: 0;
}

.moment-content-image.sp {
    width: 568rpx;
    height: 339rpx;
    border-radius: 4rpx;
    margin-right: 0;
}

.moment-content-footer {
    display: flex;
    height: 54rpx;
    justify-content: center;
    align-items: center;
    color: #791f00;
    font-size: 24rpx;
    font-weight: 500;
    background-color: #fff4ef;
    position: relative;
    margin-bottom: 30rpx;
}

.moment-content-footer::after {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 0rpx;
    background: #ededed;
    bottom: 0;
    left: 0;
}

.footer-icon {
    width: 40rpx;
    height: 40rpx;
    margin: 0 9rpx 0 10rpx;
}

.footer-building {
    flex: 1;
}

.footer-right-o {
    width: 24rpx;
    height: 32rpx;
    margin-right: 20rpx;
    font-size: 26rpx;
    line-height: 32rpx;
    color: #ff7d1a;
}