.answer-info-title,.user-info {
    display: flex;
}

.avator {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #ccc;
}

.user-intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 15rpx;
}

.user-name {
    color: #3b5769;
}

.create-time,.user-name {
    flex: 1;
    font-size: 24rpx;
    line-height: 33rpx;
}

.create-time {
    color: #8e8e93;
}

.answer-status {
    margin-left: auto;
}

.answer-status,.ellipsis {
    display: flex;
    align-items: center;
}

.ellipsis {
    justify-content: center;
    width: 60rpx;
    height: 60rpx;
    color: #8a969e;
    position: relative;
}

.ellipsis-btn {
    position: absolute;
    right: 0;
    top: 50rpx;
    width: 260rpx;
    height: 200rpx;
}

.select-list {
    background-color: rgba(51,51,51,.9);
    border-radius: 4px;
}

.select-item {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 98rpx;
    font-size: 30rpx;
    color: #fff;
}

.select-item-bord {
    border-bottom: 1px solid #4c4c4c;
}

.del-answer-dialog-ange {
    margin-left: 220rpx;
    width: 0;
    height: 0;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
    border-bottom: 5px solid rgba(51,51,51,.8);
}

.adoption,.featured {
    display: flex;
    align-items: center;
    float: left;
    margin-right: 10rpx;
    background: #ff9b00;
    padding: 0 10rpx;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.icon_featured {
    width: 46rpx;
    height: 50rpx;
}

.adoption {
    margin-left: 10rpx;
    padding: 0 16rpx;
    height: 36rpx;
    border-radius: 18rpx;
    background-color: #fe5e10;
    background-image: linear-gradient(#fe5e10,#ff7603);
    font-size: 22rpx;
    color: #fff;
}

.icon_adoption {
    width: 20rpx;
    height: 20rpx;
}

.adoption__text {
    margin-left: 6rpx;
}

.answer-info-content {
    margin-top: 27rpx;
}

.answer-content {
    margin-bottom: 14rpx;
    font-size: 30rpx;
    color: #333;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.answer-card__img-list {
    display: flex;
    flex-wrap: wrap;
}

.answer-card__img-item {
    box-sizing: border-box;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #ccc;
}

.answer-card__img-item,.answer-card__img-item_mini {
    width: 180rpx;
    height: 180rpx;
}

.answer-card__img-item_medium {
    height: 270rpx;
}

.answer-info-footer {
    display: flex;
    align-items: center;
    margin-bottom: 22rpx;
    height: 60rpx;
    border-radius: 4rpx;
    background-color: #fff4ef;
    font-size: 26rpx;
    color: #791f00;
    padding-left: 15rpx;
}

.question-info {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.arrow_right {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 21rpx;
}

.icon_right {
    width: 24rpx;
    height: 32rpx;
}

.line {
    height: 1px;
    background-color: #ededed;
}

.footer-right-o {
    width: 24rpx;
    height: 32rpx;
    font-size: 26rpx;
    line-height: 32rpx;
    color: #ff7d1a;
}