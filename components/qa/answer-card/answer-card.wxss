.answer-card-aside,.answer-card-info {
    display: flex;
}

.answer-card-aside {
    justify-content: center;
    margin-right: 20rpx;
}

.avator {
    width: 60rpx;
    height: 60rpx;
    background-color: #ccc;
    border-radius: 50%;
}

.answer-card-main {
    flex: 1;
}

.user-info {
    display: flex;
    align-items: center;
    height: 60rpx;
}

.user-name {
    font-size: 26rpx;
    font-weight: 500;
}

.user-name_user {
    color: #333;
}

.user-name_broker {
    color: #d38e02;
}

.user-name_official {
    color: red;
}

.user-type {
    justify-content: center;
    margin-left: 10rpx;
    font-size: 20rpx;
    color: #fff;
}

.user-type,.user-type_official {
    display: flex;
    align-items: center;
}

.user-type_official {
    padding: 0 15rpx 0 0;
    line-height: 30rpx;
    color: #c35207;
    border-radius: 15rpx;
    font-weight: 500;
    background: linear-gradient(267deg,#fff7e6 5%,#ffdbb4);
    justify-content: flex-start;
}

.user-type_official-image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 4rpx;
}

.user-type_broker {
    height: 30rpx;
    border-radius: 30rpx;
    background: linear-gradient(270deg,#f0ddbc,#f6db8b);
    color: #c18102;
}

.icon_broker {
    width: 30rpx;
    height: 30rpx;
}

.contact-me {
    margin-left: 6rpx;
    margin-right: 15rpx;
}

.answer-status {
    margin-left: auto;
}

.adoption,.answer-status,.featured {
    display: flex;
    align-items: center;
}

.adoption,.featured {
    float: left;
    margin-right: 10rpx;
    background: #ff9b00;
    color: #fff;
    padding: 0 10rpx;
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 2rpx;
}

.icon_featured {
    width: 41rpx;
    height: 40rpx;
}

.adoption {
    padding: 0 10rpx;
    background-color: #46c62e;
    font-size: 24rpx;
    color: #fff;
}

.dropoption {
    width: 96rpx;
    height: 36rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2rpx solid #fe5f10;
    font-size: 22rpx;
    color: #fe5e10;
    line-height: 32rpx;
    margin-left: 13rpx;
}

.content {
    font-size: 30rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #062941;
    margin-bottom: 14rpx;
    word-break: break-all;
}

.fc-gray {
    color: #333;
}

.icon_adoption {
    width: 20rpx;
    height: 20rpx;
}

.adoption__text {
    margin-left: 6rpx;
}

.adoption__add {
    width: 22rpx;
    height: 22rpx;
    background: #fe5e10;
    color: #fff;
    border-radius: 11rpx;
    text-align: center;
    line-height: 20rpx;
}

.answer-content {
    font-size: 30rpx;
    color: #333;
}

.answer-card__img-list {
    display: flex;
    flex-wrap: wrap;
}

.answer-card__img-item {
    box-sizing: border-box;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #ccc;
}

.answer-card__img-item,.answer-card__img-item_mini {
    width: 160rpx;
    height: 160rpx;
}

.answer-card__img-item_medium {
    height: 270rpx;
}

.footer {
    display: flex;
    margin-top: 14rpx;
    margin-bottom: 26rpx;
    font-size: 24rpx;
    color: #8e8e93;
}

.line {
    height: 2rpx;
    background-color: #ededed;
}

.create-time {
    font-size: 24rpx;
    color: #8e8e93;
    line-height: 33rpx;
    font-weight: 400;
    font-family: PingFangSC-Regular,PingFang SC;
}

.like-info {
    display: flex;
    margin-left: auto;
}

.formid__btn {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: transparent;
    z-index: 1;
}

.like {
    display: flex;
    align-items: center;
    height: 33rpx;
    position: relative;
}

.icon_like {
    margin-left: 10rpx;
    width: 28rpx;
    height: 28rpx;
}

.like-color {
    color: #ff9b00;
}