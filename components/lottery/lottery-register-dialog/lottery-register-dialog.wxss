.dialog-header {
    display: flex;
    align-items: center;
    padding: 0 50rpx;
    height: 128rpx;
    border-bottom: 1px solid #ededed;
}

.required {
    margin-right: 2rpx;
    color: #ed5432;
}

.sub-title__text {
    display: block;
    margin-top: 6rpx;
}

.title__text {
    font-size: 38rpx;
    font-weight: 500;
    color: #333;
}

.sub-title__text {
    font-size: 22rpx;
    color: #9d5429;
}

.dialog-body {
    padding: 0 50rpx;
}

.boc-form {
    display: block;
    width: 100%;
    height: 100%;
}

.boc-form-item__label {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    margin-bottom: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
}

.boc-form-item__content {
    display: flex;
    flex-direction: column;
    flex: 1;
}

.boc-input {
    display: flex;
    align-items: center;
    height: 80rpx;
    padding: 0 24rpx;
    font-size: 30rpx;
    color: #333;
    background-color: #f6f6f6;
}

.boc-input__inner {
    flex: 1;
}

.boc-input_tip {
    margin-top: 14rpx;
    font-size: 30rpx;
    color: #999;
    text-decoration: underline;
}

.boc-input_tip_wx {
    color: #fe5e10;
    text-decoration: none;
}

.dialog-footer {
    margin-top: 50rpx;
    margin-bottom: 30rpx;
    padding: 0 50rpx;
}

.btn-list {
    justify-content: space-between;
}

.btn-item,.btn-list {
    display: flex;
}

.btn-item {
    justify-content: center;
    align-items: center;
    width: 260rpx;
    height: 74rpx;
    border-radius: 4rpx;
    font-size: 34rpx;
}

.btn_cancel {
    background-color: #f8f8f8;
    color: #666;
}

.btn_confirm {
    background: linear-gradient(270deg,#fe5e10,#ff831c);
    color: #fff;
}