.btn_reset {
    border: 0;
    line-height: 1;
    background-color: transparent;
}

.btn_getUserInfo,.btn_reset {
    padding: 0;
    width: 100%;
    height: 100%;
}

.btn_getUserInfo {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 2;
}

.comment-info {
    display: flex;
}

.avator,.avator__inner {
    width: 80rpx;
    height: 80rpx;
}

.avator__inner {
    border-radius: 50%;
}

.comment-content {
    margin-left: 20rpx;
    flex: 1;
}

.user-info {
    height: 30rpx;
}

.user-info,.user-name {
    display: flex;
}

.user-name {
    align-items: center;
    font-size: 24rpx;
    color: #333;
}

.user-name_broker {
    color: #d38e02;
}

.user-name_offical {
    color: red;
}

.icon_offical {
    vertical-align: middle;
    width: 26rpx;
    height: 26rpx;
    border-radius: 50%;
}

.contact-me {
    position: relative;
    display: flex;
    align-items: center;
    padding-left: 10rpx;
    height: 34rpx;
}

.icon_broker {
    position: absolute;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
}

.contact-me__text {
    margin-left: 15rpx;
    padding: 0 14rpx 0 20rpx;
    border-radius: 0 30rpx 30rpx 0;
    font-size: 20rpx;
    background: linear-gradient(270deg,#f0ddbc,#f6db8b);
    color: #c18102;
}

.reply {
    position: relative;
    display: flex;
    align-items: center;
    margin-left: auto;
    font-size: 24rpx;
    color: #666;
}

.icon_reply {
    margin-right: 10rpx;
    width: 34rpx;
    height: 28rpx;
}

.reply-time {
    display: flex;
    align-items: center;
    margin-top: 4rpx;
    margin-bottom: 26rpx;
    font-size: 20rpx;
    color: #999;
}

.comment-msg {
    margin-top: 21rpx;
    margin-bottom: 24rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    word-break: break-all;
    word-wrap: break-word;
}

.sub-comment-list {
    margin-top: 14rpx;
    margin-bottom: 20rpx;
    padding: 30rpx 24rpx 24rpx;
    background-color: #f8f8f8;
}

.sub-comment-item {
    margin-bottom: 20rpx;
    font-size: 26rpx;
    color: #333;
}

.sub-comment-item,.sub-contact-me {
    position: relative;
    line-height: 36rpx;
}

.sub-contact-me {
    display: inline-block;
    margin-left: 10rpx;
}

.nickname {
    color: #999;
    vertical-align: top;
}

.nickname_broker {
    color: #d38e02;
}

.nickname_offical {
    color: red;
}

.icon_sub-broker {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
}

.reply__text {
    margin: 0 6rpx;
}

.contact-me__sub-text {
    margin-left: 15rpx;
}

.sub-comment-msg {
    margin-left: 10rpx;
}

.look-all {
    display: flex;
    align-items: center;
    margin-top: 18rpx;
    height: 40rpx;
    font-size: 28rpx;
    color: #999;
}