.broker-card-wrapper {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.btn_reset {
    border: 0;
    line-height: 1;
    background-color: transparent;
}

.btn_getUserInfo,.btn_reset {
    padding: 0;
    width: 100%;
    height: 100%;
}

.btn_getUserInfo {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 2;
}

.broker-card-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
}

.broker-avatar,.broker-avatar__img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.broker-name {
    margin-top: 14rpx;
    height: 37rpx;
    font-size: 26rpx;
    color: #333;
}

.broker-name,.building-name {
    display: flex;
    justify-content: center;
    align-items: center;
}

.building-name {
    box-sizing: border-box;
    width: 100%;
    padding: 0 24rpx;
    font-size: 22rpx;
    color: #999;
    overflow: hidden;
}

.building-name__text {
    flex: 1;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.btn_chat {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 24rpx;
    width: 130rpx;
    height: 40rpx;
    border-radius: 25rpx;
    background-image: linear-gradient(270deg,#fe5e10,#ff831c);
}

.icon_chat {
    position: relative;
    margin-right: 4rpx;
    width: 26rpx;
    height: 21rpx;
}

.btn__text {
    margin-left: 4rpx;
    font-size: 22rpx;
    color: #fff;
}