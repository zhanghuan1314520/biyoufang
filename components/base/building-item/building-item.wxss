.building-card-wrapper {
    background-color: #fff;
}

.ml10 {
    margin-left: 10rpx;
}

.btn_reset {
    border: 0;
    line-height: 1;
    background-color: transparent;
}

.btn_getUserInfo,.btn_reset {
    padding: 0;
    width: 100%;
    height: 100%;
}

.btn_getUserInfo {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 2;
}

.building-info {
    display: flex;
}

.cover {
    position: relative;
    border-radius: 4rpx;
}

.cover,.cover__img {
    width: 224rpx;
    height: 168rpx;
}

.cover__img {
    background-color: #ccc;
    border-radius: 5rpx;
}

.building-status {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 10rpx;
    height: 34rpx;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: #fff;
    opacity: .92;
}

.sold-out {
    background: #333;
}

.view {
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-left: 8rpx;
    width: 100%;
    height: 48rpx;
    background: linear-gradient(180deg,rgba(73,70,66,0),#35373d);
    border-radius: 5rpx 5rpx 0 0;
    font-size: 20rpx;
    color: #fff;
}

.icon_view {
    margin-right: 6rpx;
    width: 24rpx;
    height: 24rpx;
}

.building-detail {
    margin-left: 20rpx;
    height: 168rpx;
    overflow: hidden;
}

.building-detail,.building-intro {
    display: flex;
    flex: 1;
}

.building-intro {
    flex-direction: column;
}

.building-title {
    display: flex;
}

.building-name {
    display: -webkit-box;
    max-height: 80rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.lottery-time {
    flex: 1;
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #999;
    display: flex;
}

.lottery-time__content {
    margin-left: 20rpx;
}

.register-info {
    display: flex;
    align-items: center;
    height: 28rpx;
    font-size: 20rpx;
    color: #ff9000;
}

.lottery-percent {
    margin-left: 30rpx;
}