.building-card-wrapper {
    background-color: #fff;
}

.ml10 {
    margin-left: 10rpx;
}

.btn_reset {
    border: 0;
    line-height: 1;
    background-color: transparent;
}

.btn_getUserInfo,.btn_reset {
    padding: 0;
    width: 100%;
    height: 100%;
}

.btn_getUserInfo {
    position: absolute;
    top: 0;
    left: 0;
    background: transparent;
    z-index: 2;
}

.building-info {
    display: flex;
}

.cover {
    position: relative;
    border-radius: 8rpx;
    overflow: hidden;
}

.cover,.cover__img {
    width: 224rpx;
    height: 168rpx;
}

.cover__img {
    background-color: #ccc;
}

.building-status {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    padding: 0 10rpx;
    height: 34rpx;
    line-height: 34rpx;
    border-radius: 4rpx;
    background-image: linear-gradient(90deg,#ff9000,#ff7300);
    font-size: 20rpx;
    color: #fff;
    opacity: .92;
    text-align: center;
}

.sold-out {
    background: #333;
}

.view {
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-left: 8rpx;
    width: 100%;
    height: 48rpx;
    background: linear-gradient(180deg,rgba(73,70,66,0),#35373d);
    border-radius: 5rpx 5rpx 0 0;
    font-size: 20rpx;
    color: #fff;
}

.icon_view {
    margin-right: 6rpx;
    width: 24rpx;
    height: 24rpx;
}

.building-detail {
    flex: 1;
    margin-left: 20rpx;
    overflow: hidden;
}

.building-intro {
    flex-direction: column;
}

.building-intro,.building-name,.building-title {
    display: flex;
}

.building-name {
    flex: 1;
    align-items: center;
    height: 36rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
    overflow: hidden;
}

.building-name__text {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.bulding-tip {
    justify-content: center;
    margin-left: 20rpx;
    height: 32rpx;
    font-weight: 500;
    color: #fe6011;
}

.building-stats,.bulding-tip {
    display: flex;
    align-items: center;
    font-size: 22rpx;
}

.building-stats {
    margin-top: 10rpx;
    height: 30rpx;
    color: #999;
    white-space: nowrap;
}

.building-zone {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.building-area,.building-zone {
    display: flex;
    align-items: center;
}

.separate-line {
    padding: 0 10rpx;
    color: #d8d8d8;
}

.building-price {
    margin-top: 10rpx;
    color: #999;
}

.building-price,.past {
    display: flex;
    font-size: 22rpx;
}

.past {
    align-items: flex-end;
    line-height: 30rpx;
    color: red;
    font-weight: 400;
}

.total-price {
    align-items: center;
    height: 34rpx;
    font-size: 30rpx;
    color: red;
    font-weight: 700;
}

.average-price,.total-price {
    display: flex;
}

.average-price {
    align-items: flex-end;
    margin-left: 10rpx;
}

.building-tags {
    display: flex;
    margin-top: 16rpx;
}

.building-type {
    align-items: center;
    padding: 0 6rpx;
    height: 32rpx;
    background-color: #faf0e1;
    color: #ff9100;
    line-height: 1;
    border-radius: 2rpx;
    margin-right: 10rpx;
}

.building-tag-list,.building-type {
    display: flex;
    font-size: 20rpx;
}

.building-tag-list {
    flex: 1;
    flex-wrap: wrap;
    min-height: 34rpx;
    color: #878787;
    overflow: hidden;
}

.building-tag-item {
    justify-content: center;
    padding: 0 6rpx;
    height: 32rpx;
    background-color: #eee;
    border-radius: 2rpx;
    line-height: 1;
    margin-bottom: 8rpx;
    margin-right: 10rpx;
}

.building-tag-item,.coupon-info,.register-info,.verify-info {
    display: flex;
    align-items: center;
}

.coupon-info,.register-info,.verify-info {
    margin-top: 18rpx;
    height: 30rpx;
    font-size: 22rpx;
    color: #666;
    overflow: hidden;
}

.coupon-info__text,.register-info__text,.verify-info__text {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: 30rpx;
}

.icon_coupon,.icon_verify {
    margin-right: 10rpx;
    width: 30rpx;
    height: 30rpx;
}

.subscribe-info {
    display: flex;
    margin-top: 16rpx;
    padding-top: 14rpx;
    border-top: 1px solid #ededed;
}

.phone-info {
    font-size: 22rpx;
    color: #333;
}

.btn_subscribe,.phone-info {
    display: flex;
    align-items: center;
    height: 34rpx;
}

.btn_subscribe {
    position: relative;
    text-align: right;
    margin-left: auto;
    padding-left: 10rpx;
    font-size: 24rpx;
    color: #ff6100;
}

.follow-info {
    margin-top: 16rpx;
    padding-top: 14rpx;
    border-top: 1px solid #ededed;
}

.btn_follow,.follow-info {
    display: flex;
}

.btn_follow {
    position: relative;
    justify-content: flex-end;
    align-items: center;
    margin-left: auto;
    height: 34rpx;
    font-size: 24rpx;
    color: #ff6100;
}

.building-other-name__text {
    color: #999;
    font-size: 22rpx;
    margin-left: 10rpx;
    font-weight: 400;
}