.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.45);
    z-index: 999;
    z-index: 1000;
}

.modal .content {
    position: absolute;
    top: 49%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 582rpx;
    background-color: #fff;
    border-radius: 12rpx;
    overflow: hidden;
}

.modal .poster {
    width: 100%;
    height: 582rpx;
}

.modal .poster .poster-img {
    width: 100%;
    height: 100%;
    background-color: #e6e6e6;
}

.modal .poster-des {
    font-size: 28rpx;
    color: #333;
    text-align: center;
    padding-top: 22rpx;
}

.modal .welcome {
    display: flex;
    justify-content: center;
    padding: 43rpx 0 56rpx;
}

.modal .welcome .welcome-btn {
    font-size: 32rpx;
    color: #fff;
    font-weight: 700;
    height: 96rpx;
    line-height: 96rpx;
    width: 360rpx;
    background: linear-gradient(270deg,#fcae51,#ffbc00);
    border-radius: 8rpx;
}