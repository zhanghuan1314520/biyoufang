.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.row {
    width: 100%;
}

.row .common-btn {
    width: 80rpx;
    margin-left: 76rpx;
}

.modal {
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.45);
    z-index: 999;
}

.modal .modal-content {
    position: absolute;
    left: 0;
    width: calc(100% - 60rpx);
    margin: 0 30rpx;
    background-color: #fff;
    border-radius: 14rpx;
    bottom: 130rpx;
    height: 348rpx;
    justify-content: space-around;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 30rpx 0;
}

.modal .modal-content,.modal .modal-content .common-btn {
    color: #333;
    font-size: 20rpx;
    display: flex;
    align-items: center;
}

.modal .modal-content .common-btn {
    flex-direction: column;
    height: 94rpx;
}

.modal .modal-content .common-btn .des-icon {
    width: 48rpx;
    height: 48rpx;
    padding-bottom: 25rpx;
}

.modal .modal-btn {
    position: absolute;
    left: 0;
    width: calc(100% - 60rpx);
    margin: 0 30rpx;
    background-color: #fff;
    border-radius: 14rpx;
    color: #333;
    bottom: 20rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    text-align: center;
}

.modal .animation {
    position: absolute;
    left: 0;
    bottom: -480rpx;
    width: 100%;
}