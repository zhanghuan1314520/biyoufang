.reset-btn {
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.city-wrapper,.reset-btn {
    background-color: #fff;
}

.addition-btn {
    position: fixed;
    bottom: 30rpx;
    left: 0;
    margin: 0 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    background: linear-gradient(270deg,#fe5e10,#ff831c);
    border-radius: 4rpx;
    width: calc(100% - 60rpx);
    box-sizing: border-box;
    color: #fff;
    font-size: 34rpx;
}

.bottom-spacing {
    padding-bottom: 150rpx;
}

.section-current {
    font-size: 32rpx;
    color: #333;
    position: sticky;
    top: 65px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #ededed;
    line-height: 1;
    font-weight: 500;
    z-index: 100;
    background-color: #fff;
    height: 90rpx;
    padding: 0 30rpx;
}

.section-current .reload-location {
    font-size: 32rpx;
    color: #fe5e10;
    line-height: 60rpx;
}

.section-history {
    padding: 24rpx 30rpx 20rpx;
    font-size: 32rpx;
}

.section-history .title {
    padding-bottom: 24rpx;
    color: #999;
}

.section-history .history-list {
    display: flex;
    flex-wrap: wrap;
}

.section-history .history-list .history-item {
    box-sizing: border-box;
    margin: 0 20rpx 10rpx 0;
    padding: 0 20rpx;
    height: 56rpx;
    min-width: 144rpx;
    border-radius: 4rpx;
    border: 1rpx solid #ccc;
    line-height: 56rpx;
    text-align: center;
    color: #333;
    font-weight: 500;
}

.section-city-wrap {
    font-size: 32rpx;
}

.section-city-wrap .provincial {
    padding: 0 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #f6f6f6;
    color: #999;
}

.section-city-wrap .city-list {
    padding: 24rpx 0;
}

.section-city-wrap .city-list .city-item {
    color: #333;
    padding: 24rpx 30rpx;
    font-weight: 500;
    line-height: 1;
}

.section-city-wrap .city-list .active {
    color: #fe5e10;
}