page {
    background: #fff;
}

.market {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.nav-menu-pos {
    height: 40px;
    position: relative;
    z-index: 6;
}

.nav-menu {
    position: fixed;
    left: 0;
    z-index: 5;
    width: 750rpx;
}

.cats {
    white-space: nowrap;
}

.cat {
    position: relative;
    display: inline-block;
    width: 400rpx;
    height: 280rpx;
    border-radius: 4rpx;
    overflow: hidden;
    background: #f3f3f3;
    box-shadow: 0 2rpx 28rpx 0 hsla(0,0%,77.3%,.5);
    margin: 30rpx 30rpx 30rpx 0;
    vertical-align: bottom;
}

.cat:first-child {
    margin-left: 30rpx;
}

.cat__poster {
    width: 100%;
    height: 100%;
}

.cat__title {
    position: absolute;
    line-height: 43rpx;
    width: 100%;
    height: 94rpx;
    left: 0;
    bottom: 0;
    white-space: normal;
    padding: 5rpx 20rpx 9rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 28rpx;
    color: #252525;
}

.cat__more,.cat__title {
    background: #fff;
    box-sizing: border-box;
}

.cat__more {
    display: inline-block;
    width: 140rpx;
    box-shadow: none;
    text-align: center;
    padding-top: 60rpx;
    margin: 0 auto;
}

.cat__more-icon {
    display: inline-block;
    width: 72rpx;
    height: 72rpx;
    background: rgba(138,150,158,.5);
    border-radius: 50%;
    display: -webkit-flex;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 34rpx;
}

.cat__more-arrow {
    width: 20rpx;
    height: 20rpx;
    transform: rotate(180deg);
}

.cat__more-text {
    color: #333;
    font-size: 30rpx;
    text-align: center;
    line-height: 42rpx;
    padding-top: 13rpx;
}

.module__head {
    color: #333;
    font-size: 38rpx;
    box-sizing: border-box;
    padding: 32rpx 0 0 30rpx;
    font-weight: 700;
}

.blank {
    height: 39rpx;
}

.add-news {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    right: 20rpx;
    bottom: 20rpx;
}

moment_item:last-child .right-box {
    border: 0;
}

.question-search {
    padding: 30rpx 30rpx 0rpx;
    min-height: 110rpx;
    box-sizing: border-box;
}

.question-input,.question-search {
    display: flex;
}

.question-input {
    flex: 1;
    align-items: center;
    width: 690rpx;
    height: 70rpx;
    background-color: #f6f6f6;
    border-radius: 8rpx;
}

.question-input__prepend {
    margin: 0 15rpx;
    width: 28rpx;
    height: 28rpx;
}

.question-input__inner {
    flex: 1;
    font-size: 30rpx;
    color: #8e8e93;
}

.question-input__tip {
    justify-content: center;
    align-items: center;
    height: 70rpx;
    padding-left: 18rpx;
    font-size: 32rpx;
    color: #fe5e10;
}

.menu-list,.question-input__tip {
    display: flex;
}

.menu-list {
    min-height: 90rpx;
    padding: 0 30rpx;
    background-color: #fff;
}

.menu-item {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 60rpx;
    height: 90rpx;
    color: #ff721c;
}

.menu-item-tab {
    font-size: 30rpx;
    color: #333;
}

.menu-item_active .menu-item-tab {
    color: #ff721c;
}

.arrow-down {
    margin-left: 10rpx;
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top-color: #dae0e6;
    transform: translateY(5rpx);
}

.menu-item_active .arrow-down {
    border: 10rpx solid transparent;
    border-top-color: #ff721c;
}

.dropdown-menu {
    position: fixed;
    top: -1000rpx;
    left: 0;
    width: 100%;
    background-color: #fff;
    z-index: 10;
}

.dropdown-menu_show {
    top: 0;
}

.dropdown-menu_hide {
    top: -1000rpx;
}

.dropdown-menu-title {
    border-bottom: 1px solid #e0e5e5;
}

.menu-type-item,.menu-type-list {
    display: flex;
}

.menu-type-item {
    justify-content: center;
    flex: 1;
    height: 101rpx;
    color: #000;
}

.dropdown-menu-list,.menu-type-item {
    align-items: center;
}

.dropdown-menu-list {
    padding: 0 20rpx 0 30rpx;
    justify-content: space-between;
}

.dropdown-menu-list_full {
    padding: 0;
    margin-bottom: 20rpx!important;
}

.menu-type-item_active {
    color: #fe5e10;
}

.menu-type-item_active .arrow-down {
    border: 10rpx solid transparent;
    border-top-color: #fe5e10;
}

.dropdown-menu-list {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 60rpx;
}

.dropdown-menu-item {
    display: flex;
    justify-content: center;
    align-items: center;
}

.dropdown-menu-item_mini {
    box-sizing: border-box;
    margin-top: 30rpx;
    border-radius: 4rpx;
    width: 160rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 26rpx;
    background-color: #f8f8f8;
    color: #666;
}

.dropdown-menu-item_mini_actived {
    box-sizing: border-box;
    color: #fe610e;
    background-color: #fff4ee;
    border: 1px solid #fe5e10;
}

.dropdown-menu-item_default {
    margin-right: 0;
    width: 760rpx;
    height: 90rpx;
    font-size: 30rpx;
    color: #382828;
}

.dropdown-menu-item_default_actived {
    color: #ff721c;
}

.dropdown-menu-footer {
    margin-top: 60rpx;
}

.btn-item,.btn-list {
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-item {
    height: 100rpx;
    font-size: 32rpx;
}

.btn-item_confirm {
    height: 100rpx;
    font-size: 34rpx;
}

.btn-item_reset {
    box-sizing: border-box;
    color: #666;
    width: 50%;
    border-top: 1px solid hsla(0,0%,94.9%,.5);
}

.btn-item_confirm {
    width: 50%;
    background-color: #fe5e10;
    background: linear-gradient(270deg,#fe5e10,#ff831c);
    color: #fff;
}

.btn_goQuestion {
    position: fixed;
    right: 30rpx;
    bottom: 20rpx;
    width: 200rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background: linear-gradient(90deg,#ffb841,#ffac5f);
    box-shadow: 0 2rpx 18rpx 0 rgba(186,93,15,.5);
    border-radius: 45rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
}

.icon_question {
    width: 42rpx;
    height: 42rpx;
    margin-right: 10rpx;
}

.qa-list {
    flex: 1;
    padding: 20rpx 30rpx 0;
    background-color: #f7f7f7;
}

.qa-item {
    margin-bottom: 20rpx;
    background-color: #fff;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #414141;
    opacity: .9;
    z-index: 5;
    animation: fadeIn 1s ease;
}

@-webkit-keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: .9;
    }
}

@keyframes fadeIn {
    0% {
        opacity: 0;
    }

    100% {
        opacity: .9;
    }
}

.no-qa {
    text-align: center;
}

.no-qa-image-type1 {
    width: 246rpx;
    height: 218rpx;
    margin-top: 138rpx;
    margin-bottom: 64rpx;
}

.no-qa-txt-type1 {
    font-size: 30rpx;
    line-height: 42rpx;
    color: #8e8e93;
}

.no-qa-txt-type2 {
    color: #ff6a0a;
    font-size: 28rpx;
    margin-top: 18rpx;
    font-weight: 500;
    line-height: 42rpx;
}

.question-search-outbox {
    height: 200rpx;
    position: relative;
    width: 750rpx;
}

.question-search-box {
    position: fixed;
    left: 0;
    width: 750rpx;
    z-index: 2;
    background: #fff;
}

.banner__wrap {
    padding: 30rpx 30rpx 0;
}