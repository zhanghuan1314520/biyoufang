page {
    box-sizing: border-box;
}

.upgrade-dialog-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #000;
    opacity: .45;
}

.upgrade-dialog {
    position: fixed;
    top: 50%;
    left: 50%;
    padding-bottom: 48rpx;
    width: 650rpx;
    height: 482rpx;
    border-radius: 8rpx;
    transform: translate(-50%,-50%);
    background-color: #fff;
}

.upgrade-dialog-header {
    position: relative;
    padding-top: 40rpx;
    padding-left: 40rpx;
    height: 155rpx;
    border-radius: 8rpx 8rpx 0 0;
    background-color: #ffa34f;
    font-size: 40rpx;
    letter-spacing: 1px;
    color: #fff;
}

.img_bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 155rpx;
}

.upgrade-dialog-content {
    padding: 44rpx 40rpx 24rpx;
    font-size: 28rpx;
    color: #333;
}

.acticed {
    margin: 0 4rpx;
    color: #fe5e10;
}

.upgrade-dialog-footer {
    padding: 0 40rpx;
    flex-direction: column;
}

.contact,.upgrade-dialog-footer {
    display: flex;
}

.contact {
    align-items: center;
    width: 100%;
    height: 40rpx;
    font-size: 26rpx;
    color: #333;
}

.line {
    width: 94rpx;
    height: 1rpx;
    background-color: #d8d8d8;
}

.contact__text {
    flex: 1;
    text-align: center;
}

.wx {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10rpx auto 0;
    width: 320rpx;
    height: 60rpx;
}

.wx__text {
    font-size: 26rpx;
    color: #fe5e10;
}