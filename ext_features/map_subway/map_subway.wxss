.map-legend {
    position: fixed;
    left: 0;
    width: 145rpx;
    height: auto;
    background: #fff;
    box-sizing: border-box;
    padding: 20rpx 16rpx 25rpx 19rpx;
    border-radius: 2px;
    overflow: hidden;
}

.map-legend-item {
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.map-legend-item:not(:last-child) {
    margin-bottom: 20rpx;
}

.legend-name {
    flex: 1;
    box-sizing: border-box;
    padding-left: 15rpx;
    line-height: 28rpx;
    font-size: 18rpx;
}

.map-legend-item .legend-color {
    width: 18rpx;
    height: 18rpx;
    border-radius: 4rpx;
}

.legend-item-1 .legend-color {
    background: #219f56;
}

.legend-item-2 .legend-color {
    background: #ff670f;
}

.legend-item-3 .legend-color {
    background: #ff9102;
}

.legend-item-4 .legend-color {
    background: #fe1010;
}

.legend-item-5 .legend-color {
    background: #0091ff;
}

.legend-item-6 .legend-color {
    background: #979797;
}

.legend-item-7 .legend-color {
    background: #0091ff;
}

.legend-item-8 .legend-color {
    background: #bea079;
}

.map-legend {
    height: auto;
}

#map {
    width: 100%;
    height: 100%;
    z-index: 1;
}

.unfold {
    position: absolute;
    top: -108rpx;
    left: 0;
    width: 160rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 40rpx;
    font-size: 30rpx;
    color: #333;
    box-shadow: 0 2rpx 28rpx 0 hsla(0,0%,77.3%,.5);
    background-color: #fff;
}

.unfold-icon {
    width: 44rpx;
    height: 45rpx;
    margin-right: 6rpx;
}

.legend-tips {
    flex: 1;
    text-align: right;
    color: #f47131;
    font-size: 24rpx;
    padding: 27rpx 24rpx 30rpx;
}

.subway-legend-warp {
    position: absolute;
    z-index: 10;
    width: calc(100% - 40rpx);
    bottom: 20rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #fff;
    box-shadow: 0 2rpx 14rpx 0 hsla(0,0%,69.8%,.2);
    border-radius: 16rpx;
    box-sizing: border-box;
    transition: bottom .5s;
}

.subway-legend {
    display: flex;
    flex-wrap: wrap;
    padding-left: 42rpx;
    padding-bottom: 30rpx;
}

.subway-legend-item {
    width: 33.3%;
    display: flex;
    align-items: center;
    padding: 15rpx 0;
}

.subway-name {
    color: #666;
    font-size: 28rpx;
    padding-left: 20rpx;
}

.subway-color {
    width: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    position: relative;
}

.subway-status-close::after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: hsla(0,0%,100%,.8);
    z-index: 999;
}

.subway-color-dot {
    width: 10rpx;
    height: 10rpx;
    background: #fff;
    border-radius: 50%;
    position: relative;
    z-index: 2;
}

.subway-color-crossline {
    width: 100%;
    height: 4rpx;
    position: absolute;
    top: calc(50% - 2rpx);
    left: 0;
    z-index: 1;
}