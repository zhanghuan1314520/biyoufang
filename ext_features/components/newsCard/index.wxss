.btn-list .btn-common,.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.card {
    position: relative;
    background: #fff;
    box-shadow: 0 2rpx 18rpx 0 hsla(0,0%,83.5%,.5);
    border-radius: 4rpx;
    padding-bottom: 30rpx;
}

.card .create-time {
    font-size: 28rpx;
    color: #878787;
    font-weight: 500;
    padding: 30rpx;
}

.card .audit-status {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    font-size: 28rpx;
    color: red;
}

.card .audit-status .status-text {
    display: inline-block;
    padding-top: 10rpx;
}

.card .audit-status .audit-pass {
    width: 118rpx;
    height: 118rpx;
}

.card .audit-status .auditing {
    color: #fe5f10;
}

.card .news-title {
    font-size: 32rpx;
    color: #333;
    padding: 0 30rpx 20rpx;
    border-bottom: 1px solid #f0f0ea;
}

.card .content-text {
    font-size: 28rpx;
    color: #666;
    padding: 24rpx 30rpx 0;
    line-height: 40rpx;
    max-height: 80rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.card .content-imgs {
    padding: 10rpx 30rpx;
}

.card .content-imgs .img-wrap {
    display: inline-block;
    padding-right: 10rpx;
    padding-bottom: 10rpx;
}

.card .content-imgs .image-item {
    width: 192rpx;
    height: 144rpx;
    background: linear-gradient(180deg,rgba(73,70,66,0),#35373d);
}

.card .remark {
    font-size: 24rpx;
    color: #fe5e10;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0 30rpx;
    padding: 0 20rpx;
    background: #fff4ef;
    border-radius: 4rpx;
    line-height: 54rpx;
    max-height: 54rpx;
}

.btn-list {
    padding-top: 40rpx;
    display: flex;
    justify-content: flex-end;
}

.btn-list .btn-common {
    margin-right: 30rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 28rpx;
    border-radius: 28rpx;
}

.btn-list .del-btn {
    width: 140rpx;
    color: #666;
    border: 1px solid #d6d6d6;
}

.btn-list .alter-btn {
    width: 170rpx;
    color: #fe5e10;
    border: 1px solid #ff9764;
}