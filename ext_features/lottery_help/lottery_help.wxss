.lottery {
    padding: 30rpx;
}

.lottery-title {
    font-size: 38rpx;
    font-weight: 700;
    color: #333;
    line-height: 38rpx;
    margin-top: 22rpx;
    margin-bottom: 88rpx;
}

.lottery-params-info {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 5rpx;
}

.item {
    flex: 1;
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
}

.help-main {
    background: #f5f5f5;
    margin-top: 30rpx;
    border-radius: 8rpx;
    padding: 30rpx 30rpx 39rpx;
}

.line {
    display: flex;
    align-items: center;
    margin-bottom: 41rpx;
}

.line:last-child {
    margin-bottom: 0;
}

.equal {
    margin: 0 21rpx;
}

.value1 {
    padding: 0 13rpx;
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
}

.value2 {
    height: 2rpx;
    background: #ccc;
    margin-top: 6rpx;
    margin-bottom: 9rpx;
}

.color-dark {
    color: #333;
}

.talent-title .item {
    line-height: 80rpx;
    font-size: 30rpx;
}

.talent-main {
    margin-top: 0;
}

.talent-main .value-box {
    text-align: center;
}

.mgt-30 {
    margin-top: 30rpx;
}

.talent-explain {
    color: #888;
    font-size: 26rpx;
    padding-top: 30rpx;
}