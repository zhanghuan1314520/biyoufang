page {
    background: #fff;
}

.broker_list {
    min-height: 100vh;
    padding-bottom: 150rpx;
    background-color: #f5f5f5;
    position: relative;
    box-sizing: border-box;
}

.empty-wrap {
    width: 278rpx;
    height: 311rpx;
    margin: 280rpx auto 0;
}

.empty-img {
    display: block;
    width: 100%;
    height: 100%;
}

.broker-item {
    padding: 30rpx;
}

.setter-in {
    position: absolute;
    bottom: 30rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 90rpx;
    border: 2rpx solid #fe5e10;
    width: 400rpx;
    border-radius: 45rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fe5e10;
    font-size: 34rpx;
}

.setter-in-icon {
    width: 42rpx;
    height: 42rpx;
    margin-right: 12rpx;
}