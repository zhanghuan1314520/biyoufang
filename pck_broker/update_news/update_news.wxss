.news-list-item {
    padding: 0 30rpx;
}

.label {
    padding: 32rpx 0 25rpx;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    font-weight: 500;
    color: #333;
}

.asterisk {
    color: #ed5432;
}

.content {
    position: relative;
    width: 100%;
    height: 150rpx;
    border: 2rpx solid #f0f0f0;
    border-radius: 4rpx;
    background-color: #f9f9f9;
}

.main-content,.textarea {
    height: 100%;
}

.textarea {
    width: 640rpx;
    line-height: 37rpx;
    padding: 14rpx 20rpx 50rpx;
}

.news-content {
    min-height: 400rpx;
}

.content-placeholder {
    font-size: 26rpx;
    line-height: 37rpx;
    color: #8a969e;
}

.limit {
    position: absolute;
    right: 20rpx;
    bottom: 14rpx;
    font-size: 28rpx;
    color: #8a969e;
    z-index: 2;
}

.max-length {
    color: #333;
}

.upload-imgs-list {
    display: flex;
    flex-flow: wrap;
}

.upload-imgs-item {
    position: relative;
    box-sizing: border-box;
    margin-right: 30rpx;
    margin-bottom: 30rpx;
    width: 140rpx;
    height: 140rpx;
    border: 2rpx solid #f0f0f0;
    border-radius: 4rpx;
    background-color: #f9f9f9;
    color: #d4d4d4;
    font-size: 70rpx;
}

.upload-imgs-item_hidden {
    display: none;
}

.img-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.img {
    width: 140rpx;
    height: 140rpx;
}

.plus {
    width: 60rpx;
    height: 60rpx;
}

.delete {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40rpx;
    height: 40rpx;
    transform: translate(50%,-50%);
    border-radius: 50%;
    background-color: #f25643;
    color: #fff;
}

.line {
    width: 22rpx;
    border: 2rpx solid #fff;
}

.rule-list {
    margin-top: 15rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    font-family: PingFang-SC-Regular,PingFang-SC;
    color: #16374d;
}

.footer {
    margin: 56rpx 30rpx 60rpx;
}

.submit-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 90rpx;
    background-color: #fe5e10;
    border-radius: 4rpx;
    font-size: 34rpx;
    color: #fff;
}

.building-tab {
    padding-top: 15rpx;
}

.pdt-30 {
    padding-top: 30rpx;
}

.news-building {
    display: flex;
    align-items: center;
    height: 79rpx;
    border-bottom: 1px solid #ededed;
    color: #ff6e07;
    font-size: 30rpx;
    padding-left: 30rpx;
    font-weight: 700;
}

.building-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 8rpx;
}