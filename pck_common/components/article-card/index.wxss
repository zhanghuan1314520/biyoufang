.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.article-card {
    padding: 30px 0;
    border-bottom: 1px solid #ededed;
}

.article-card,.card-left {
    display: flex;
    justify-content: space-between;
}

.card-left {
    flex-direction: column;
    flex: 1;
}

.card-left .title {
    font-size: 32rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height: 90rpx;
    line-height: 45rpx;
}

.card-left .info {
    justify-content: space-between;
    font-size: 24rpx;
}

.card-left .info,.card-left .info .info-left {
    display: flex;
    align-items: center;
}

.card-left .info .info-left .avatar {
    width: 40rpx;
    height: 40rpx;
    background-color: #e6e6e6;
    border-radius: 50%;
    margin-right: 14rpx;
}

.card-left .info .info-left .user-name {
    color: #666;
}

.card-left .info .info-right {
    color: #999;
}

.card-right {
    padding-left: 36rpx;
}

.card-right .card-cover {
    width: 218rpx;
    height: 164rpx;
    border-radius: 8rpx;
    vertical-align: bottom;
}