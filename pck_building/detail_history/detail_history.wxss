page {
    background: #f7f7f7;
    color: #333;
}

.building__info {
    padding: 20rpx 29rpx 24rpx 30rpx;
    background: #fff;
    box-sizing: border-box;
    display: flex;
    align-items: flex-end;
    border-bottom: 1rpx solid #ededed;
}

.building__name {
    font-size: 44rpx;
    line-height: 62rpx;
    font-weight: 500;
    line-height: 44rpx;
    color: #333;
}

.building__address {
    padding-left: 17rpx;
    display: flex;
    align-items: center;
}

.address__icon {
    width: 25rpx;
    height: 25rpx;
}

.address__name {
    font-size: 24rpx;
    line-height: 33rpx;
    padding-left: 13rpx;
}

.chart {
    padding: 0 0 30rpx;
    background: #fff;
}

.chart__wrap {
    width: 100%;
    height: 335rpx;
}

.chart__tip {
    padding-left: 30rpx;
    padding-top: 20rpx;
    font-size: 24rpx;
    color: #999;
}

.chart__price {
    margin-top: 12rpx;
}

.chart__title {
    font-size: 38rpx;
    font-weight: 500;
    color: #333;
    padding: 23rpx 0 20rpx 30rpx;
}

.openings {
    box-sizing: border-box;
    padding: 22rpx 0 60rpx 28rpx;
}

.openings__title {
    font-size: 38rpx;
    font-weight: 500;
    padding-bottom: 52rpx;
    box-sizing: border-box;
}

.opening__year {
    padding-top: 4rpx;
    padding-bottom: 16rpx;
    font-size: 32rpx;
    line-height: 45rpx;
}

.opening__card {
    position: relative;
    margin-left: 37rpx;
    border-left: 1rpx solid #d7d7d7;
    padding-left: 65rpx;
    padding-bottom: 27rpx;
    margin-bottom: 30rpx;
}

.opening__time {
    position: absolute;
    top: -2rpx;
    width: 130rpx;
    left: -65rpx;
    background: #f7f7f7;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 4rpx;
}

.opening__time view {
    display: inline-block;
}

.opening__dot {
    width: 8rpx;
    height: 8rpx;
    background: #fff;
    border: 8rpx solid #8a969e;
    border-radius: 50%;
}

.opening__dot-s {
    position: absolute;
    width: 9rpx;
    height: 9rpx;
    left: calc(50% - 4rpx);
    top: 0;
    border: none;
    background: #bbc3c9;
}

.opening__day {
    font-size: 20rpx;
    line-height: 50rpx;
    color: #333;
}

.opening__month {
    font-size: 24rpx;
    color: #333;
    font-weight: 700;
}

.opening__info {
    background: #fff;
    border-radius: 4rpx;
    box-shadow: 0 2px 10px 0 hsla(0,0%,83.5%,.5);
    box-sizing: border-box;
    padding: 24rpx 30rpx 6rpx;
}

.info__cell {
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    padding-bottom: 20rpx;
}

.info__cell-left {
    width: 140rpx;
    color: #999;
    text-align: left;
    line-height: 37rpx;
}

.info__cell-right {
    flex: 1;
    line-height: 37rpx;
    color: #333;
}

.compare__rate {
    padding-left: 4rpx;
    color: red;
}

.compare__rate-down {
    color: #0c0;
}