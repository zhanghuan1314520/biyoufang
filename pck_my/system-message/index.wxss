.reset-btn {
    background-color: #fff;
    margin: 0;
    padding: 0;
    line-height: 1;
    border-radius: 0;
}

.bg {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: #f7f7f7;
    z-index: -1;
}

.msg__list {
    box-sizing: border-box;
    padding: 0 30rpx 84rpx;
}

.msg__time-wrap {
    margin: 24rpx 0;
    text-align: center;
    line-height: 24rpx;
}

.msg__time {
    display: inline-block;
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
    border-radius: 20rpx;
}

.msg__card {
    border-radius: 4rpx;
    width: 690rpx;
    box-sizing: border-box;
    display: flex;
    margin-top: 14rpx;
}

.msg__card_icon {
    width: 70rpx;
    height: 70rpx;
    flex-shrink: 0;
}

.msg__card_right {
    background-color: #fff;
    flex-grow: 1;
    display: flex;
    margin-left: 18rpx;
    justify-content: space-between;
    color: #333;
    font-size: 28rpx;
    padding: 36rpx 30rpx;
    align-items: center;
    border-radius: 4rpx;
    position: relative;
}

.msg__card_right::before {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    border-top: 10rpx solid transparent;
    border-right: 20rpx solid #fff;
    border-bottom: 10rpx solid transparent;
    top: 0;
    left: -15rpx;
}

.msg__title {
    display: flex;
    justify-content: space-between;
    height: 95rpx;
    padding: 30rpx 29rpx 23rpx;
    box-sizing: border-box;
}

.msg__new__type {
    height: 100rpx;
    padding-right: 0;
}

.msg__status {
    display: flex;
    align-items: center;
}

.msg__status-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 17rpx;
    position: relative;
}

.msg__status-text {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    letter-spacing: 1rpx;
}

.msg__handler {
    flex-shrink: 0;
    font-size: 26rpx;
    color: #999;
    margin-left: 20rpx;
}

.msg__content {
    font-size: 32rpx;
    line-height: 45rpx;
    padding-bottom: 10rpx;
    margin: 0 30rpx;
    color: #666;
}

.border-btm {
    padding-bottom: 23rpx;
    border-bottom: 1px solid #eaeaea;
}

.msg_new {
    width: 16rpx;
    height: 16rpx;
    border-radius: 8rpx;
    background-color: red;
    position: absolute;
    right: -4rpx;
    top: -2rpx;
}

.msg__content {
    font-size: 28rpx;
}

.msg__content_btm,.msg__content_title {
    color: #062941;
}

.msg__content_main,.msg__content_title {
    display: inline-block;
}

.msg__content_main {
    color: #92949d;
}

.msg__content_sp {
    color: #fe6c08;
}

.data__empty {
    text-align: center;
}

.data__empty-img {
    width: 252rpx;
    height: 252rpx;
    margin-top: 100rpx;
}

.data__empty-go,.data__empty-tip {
    color: #999;
    font-size: 28rpx;
    line-height: 40rpx;
}

.data__empty-tip {
    margin-top: 24rpx;
    margin-bottom: 16rpx;
}

.data__empty-go {
    color: #ff6a0a;
}

.no-more {
    text-align: center;
    margin-top: 15rpx;
    color: #999;
    font-size: 24rpx;
}